@model WebApplication3.Models.Pubela

@{
    ViewData["Title"] = "Adaugă Pubelă";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Tip" class="control-label"></label>
        <input asp-for="Tip" class="form-control" />
        <span asp-validation-for="Tip" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adresa" class="control-label"></label>
        <input asp-for="Adresa" class="form-control" />
        <span asp-validation-for="Adresa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CetateanId" class="control-label">Cetățean</label>
        <select asp-for="CetateanId" class="form-control"
                asp-items="ViewBag.CetateanId"></select>
        <span asp-validation-for="CetateanId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvează</button>
    <a asp-action="Index" class="btn btn-secondary">Renunță</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}