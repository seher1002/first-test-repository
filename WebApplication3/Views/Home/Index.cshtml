<h2>Gestionare cetățeni</h2>

<form id="citizenForm">
    <input type="text" placeholder="Nume" id="nume" required />
    <input type="text" placeholder="Prenume" id="prenume" required />
    <input type="email" placeholder="Email" id="email" required />
    <input type="text" placeholder="CNP" id="cnp" required />
    <button type="submit">Adaugă</button>
</form>

<h3>Listă cetățeni</h3>
<table id="citizenTable" class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nume</th>
            <th>Prenume</th>
            <th>Email</th>
            <th>CNP</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


<script>
    const form = document.getElementById("citizenForm");
    const tableBody = document.querySelector("#citizenTable tbody");

    form.addEventListener("submit", function (e) {
        e.preventDefault();

        const citizen = {
            nume: document.getElementById("nume").value,
            prenume: document.getElementById("prenume").value,
            email: document.getElementById("email").value,
            cnp: document.getElementById("cnp").value,
        };

        fetch("/api/citizen", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(citizen)
        })
        .then(res => res.json())
        .then(data => {
            const row = `<tr>
                            <td>${data.id}</td>
                            <td>${data.nume}</td>
                            <td>${data.prenume}</td>
                            <td>${data.email}</td>
                            <td>${data.cnp}</td>
                         </tr>`;
            tableBody.innerHTML += row;
            form.reset();
        });
    });

    window.onload = function () {
        fetch("/api/citizen")
            .then(res => res.json())
            .then(data => {
                data.forEach(citizen => {
                    const row = `<tr>
                                    <td>${citizen.id}</td>
                                    <td>${citizen.nume}</td>
                                    <td>${citizen.prenume}</td>
                                    <td>${citizen.email}</td>
                                    <td>${citizen.cnp}</td>
                                 </tr>`;
                    tableBody.innerHTML += row;
                });
            });
    };
</script>


